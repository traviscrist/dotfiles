let mapleader=","

""" Plugins
set surround
set commentary

""" Common settings
set relativenumber
set scrolloff=3

"Copy From Vim
set clipboard+=unnamedplus

""" Idea settings
set ideajoin

""" Mappings
map <leader>e <Action>(SearchEverywhere)
map <leader>m <Action>(RecentFiles)
map <leader>g <Action>(FindInPath)

map <leader>d <Action>(ToggleDistractionFreeMode)

map gi <Action>(GotoImplementation)
map <leader>v <Action>(FindUsages)
map <leader>F <Action>(HighlightUsagesInFile)
map <leader>r <Action>(FindInPath)

map <leader>w <Action>(SaveAll)

map <C-o> <Action>(Back)
map <C-i> <Action>(Forward)

map <C-J> <C-W><C-J>
map <C-K> <C-W><C-K>
map <C-L> <C-W><C-L>
map <C-H> <C-W><C-H>
